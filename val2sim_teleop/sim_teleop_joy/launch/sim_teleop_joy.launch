<?xml version="1.0"?>
<launch>

 <!-- joy node -->
  <node respawn="true" pkg="joy" type="joy_node" name="joy_node" >
    <param name="dev" type="string" value="/dev/input/js0" />
    <param name="deadzone" value="0.05" />
  </node>

 <!-- Axes -->
  <param name="axis_linear" value="1" type="int"/>
  <param name="axis_angular" value="0" type="int"/>
  <param name="scale_linear" value="0.30" type="double"/>
  <param name="scale_angular" value="0.30" type="double"/>
  <node pkg="sim_teleop_joy" type="sim_teleop_joy" name="sim_teleop_joy_node"/>

  <!-- joy node -->
  <node pkg="sim_teleop_joy" type="joy_subscriber.py" name="joy_subscriber_node" output="screen"/>

</launch>
